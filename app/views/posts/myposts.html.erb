<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    My Posts
                    <small>Your posts</small>
                </h1>
<div style="position: relative;">
<% if !current_user.timeline.blank? %>   
  <img class="img-responsive" src=<%= image_path(current_user.timeline.url) %> alt=<%= current_user.timeline_file_name %>>
<% else %>  
  <img class="img-responsive" src=<%= image_path('home.png') %> alt="home">
<% end %>
<div id="profile">
<% if !current_user.avatar.blank? %>
  <img class="img-responsive" src=<%= image_path(current_user.avatar.url(:thumb)) %> alt=<%= current_user.avatar_file_name %>>
<% else %>
  <img class="img-responsive" src=<%= image_path('default-missing.jpg') %> alt="missing">
<% end %>
</div>

<div id="changetimeline">
  <%= link_to edit_user_registration_path do %>
    <button class="btn btn-primary">Change Time line Pic</button>
  <% end %>
</div>
</div>
<hr>

<%= render 'display' %>
<!-- Pager -->
<ul class="pager">
  <%= will_paginate @posts,:page_links => false,:previous_label=>"&larr; Older", :next_label=>"Newer &rarr;" %>
  

</div>

<%= render 'partials/search' %>
<%= render 'partials/categories' %>
<%= render 'partials/widget' %>
</div>