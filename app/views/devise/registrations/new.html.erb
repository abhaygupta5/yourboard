<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Sign Up
                </h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true,autofocus: true,placeholder: "Name",class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, required: true,placeholder: "email@example.com",class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :avatar,"Profile Pic" %>
    <%= f.file_field :avatar,class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :timeline,"Timeline Pic" %>
    <%= f.file_field :timeline,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, required: true,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "6 characters minimum", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, required: true, placeholder: "Confirmed Password", class: "form-control" %>
    </div>
  
  
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>
</div>

<%= render 'partials/search' %>
<%= render 'partials/categories' %>
<%= render 'partials/widget' %>
</div>