<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Forgot your Password
                </h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true,class: "form-control" %>
  </div>
  <br><br>
  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<%= render 'partials/search' %>
<%= render 'partials/categories' %>
<%= render 'partials/widget' %>
</div>