<div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
            	<h1 class="page-header">
                    Feedback
                    <small>You are viewing feedbacks</small>
                </h1>

<% @comments.each do |comment| %>
<div style="border: 5px outset;padding:10px;margin:10px 0;">
	<h2 class="lead"><%= simple_format(comment.body) %></h2>
    <hr>
    <p><i class="fa fa-clock-o"></i> Posted on <%= comment.created_at.strftime("%B, %d %Y") %> By <%= comment.user.name %></p>
    <hr>
                <% if user_signed_in? && comment.user.id==4 %>
					<p align="left"><%= link_to image_tag("icon.png"), comment_path(comment), method: :delete, data: { confirm: "Are you sure?"} %></p>
                    <hr>
				<% end %>
</div>
    
	
<% end %>
<!-- Pager -->
<ul class="pager">
  <%= will_paginate @posts,:page_links => false,:previous_label=>"&larr; Older", :next_label=>"Newer &rarr;" %>
  
</ul>

</div>

<%= render 'partials/search' %>
<%= render 'partials/categories' %>
<%= render 'partials/widget' %>
</div>
            	
	
	
	

